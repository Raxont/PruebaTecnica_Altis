generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  
  users     User[]
  issues    Issue[]

  @@map("organizations")
}

model User {
  id             Int          @id @default(autoincrement())
  email          String       @unique
  password       String
  name           String
  organizationId Int          @map("organization_id")
  createdAt      DateTime     @default(now()) @map("created_at")
  updatedAt      DateTime     @updatedAt @map("updated_at")
  
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  assignedIssues Issue[]      @relation("AssignedIssues")
  createdIssues  Issue[]      @relation("CreatedIssues")
  comments       Comment[]

  @@map("users")
}

model Issue {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  status      Status   @default(TODO)
  priority    Priority @default(MED)
  labels      String[]
  assigneeId  Int?     @map("assignee_id")
  creatorId   Int      @map("creator_id")
  orgId       Int      @map("org_id")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  assignee     User?        @relation("AssignedIssues", fields: [assigneeId], references: [id], onDelete: SetNull)
  creator      User         @relation("CreatedIssues", fields: [creatorId], references: [id], onDelete: Cascade)
  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  comments     Comment[]
  activities   Activity[]

  @@index([orgId, status])
  @@index([assigneeId])
  @@map("issues")
}

model Comment {
  id        Int      @id @default(autoincrement())
  content   String
  issueId   Int      @map("issue_id")
  authorId  Int      @map("author_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  
  issue  Issue @relation(fields: [issueId], references: [id], onDelete: Cascade)
  author User  @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@map("comments")
}

model Activity {
  id        Int      @id @default(autoincrement())
  issueId   Int      @map("issue_id")
  action    String
  field     String?
  oldValue  String?  @map("old_value")
  newValue  String?  @map("new_value")
  createdAt DateTime @default(now()) @map("created_at")
  
  issue Issue @relation(fields: [issueId], references: [id], onDelete: Cascade)

  @@map("activities")
}

enum Status {
  TODO        @map("todo")
  IN_PROGRESS @map("in_progress")
  DONE        @map("done")
}

enum Priority {
  LOW  @map("low")
  MED  @map("med")
  HIGH @map("high")
}